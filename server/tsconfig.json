{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": "src",
        "sourceMap": true,
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "lib": ["es5", "es6", "dom"],
        "baseUrl": "./",
        "outDir": "./build/",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "paths": {
            "src/*": ["src/*"]
        }
    },
    "exclude": [
        "**/*.spec.ts",
        "node_modules",
        "dist",
        "build"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
